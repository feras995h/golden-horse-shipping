# Golden Horse Shipping - Environment Variables
# Copy this file to .env and update the values for your environment

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Choose deployment profile: single-app, full-stack, production, coolify
COMPOSE_PROFILES=production

# Environment
NODE_ENV=production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=Golden Horse Shipping
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=ar

# =============================================================================
# PORTS CONFIGURATION
# =============================================================================
# Main application port (for single-app deployment)
PORT=3000

# Service-specific ports (for full-stack deployment)
FRONTEND_PORT=3000
BACKEND_PORT=3001
POSTGRES_PORT=5432
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Full database URL (recommended)
DATABASE_URL=postgresql://postgres:GoldenHorse2024!@postgres:5432/golden_horse_db

# Individual database settings (fallback)
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=GoldenHorse2024!
DB_NAME=golden_horse_db
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false
DB_SYNCHRONIZE=false
DB_LOGGING=false

# PostgreSQL specific settings
POSTGRES_DB=golden_horse_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GoldenHorse2024!

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=GoldenHorse-JWT-Secret-Key-2024-Production-Change-This
JWT_EXPIRES_IN=24h

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend (use /api for nginx proxy, full URL for direct access)
NEXT_PUBLIC_API_URL=/api

# Frontend application settings
NEXT_PUBLIC_APP_NAME=Golden Horse Shipping
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar
NEXT_PUBLIC_VPS_URL=http://72.60.92.146
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# CORS settings (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://72.60.92.146,https://72.60.92.146

# Frontend URL for backend to generate links
FRONTEND_URL=http://72.60.92.146

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# ShipsGo API Configuration
SHIPSGO_API_URL=https://api.shipsgo.com
SHIPSGO_API_KEY=your-shipsgo-api-key-here
SHIPSGO_USERNAME=your-shipsgo-username
SHIPSGO_PASSWORD=your-shipsgo-password

# Redis (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEPLOYMENT SPECIFIC SETTINGS
# =============================================================================

# For VPS Deployment (72.60.92.146)
# Uncomment and update these for your VPS:
# NEXT_PUBLIC_VPS_URL=http://72.60.92.146
# FRONTEND_URL=http://72.60.92.146
# CORS_ORIGIN=http://72.60.92.146,https://72.60.92.146

# For Local Development
# Uncomment these for local development:
# NEXT_PUBLIC_VPS_URL=http://localhost
# FRONTEND_URL=http://localhost:3000
# CORS_ORIGIN=http://localhost:3000

# For Cloud Deployment (Coolify, Railway, etc.)
# Use external database URL and adjust URLs accordingly:
# DATABASE_URL=your-cloud-database-url
# NEXT_PUBLIC_VPS_URL=https://your-domain.com
# FRONTEND_URL=https://your-domain.com
# CORS_ORIGIN=https://your-domain.com

# =============================================================================
# USAGE EXAMPLES
# =============================================================================

# Single App Deployment (Coolify/Railway):
# COMPOSE_PROFILES=single-app
# PORT=3000
# DATABASE_URL=your-external-database-url

# Full Stack VPS Deployment:
# COMPOSE_PROFILES=production
# POSTGRES_PASSWORD=your-secure-password
# JWT_SECRET=your-secure-jwt-secret

# Development:
# COMPOSE_PROFILES=full-stack
# NODE_ENV=development
# DB_LOGGING=true
